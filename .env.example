# Ollama URL for the backend to connect
# The path '/ollama' will be redirected to the specified backend URL
OLLAMA_BASE_URL='http://localhost:11434'

OPENAI_API_BASE_URL=''
OPENAI_API_KEY=''

# Azure O3-mini Configuration for CrewAI MCP
CREWAI_AZURE_OPENAI_API_KEY=''
CREWAI_AZURE_OPENAI_ENDPOINT=''
CREWAI_AZURE_OPENAI_API_VERSION='2024-12-01-preview'
CREWAI_AZURE_OPENAI_DEPLOYMENT_NAME='o3-mini'

# MCP Configuration
ENABLE_MCP_API=true

# NewsDesk Azure Blob Storage configuration for MCP news server
AZURE_STORAGE_CONNECTION_STRING=''
AZURE_BLOB_CONTAINER_NAME='articles'

# AUTOMATIC1111_BASE_URL="http://localhost:7860"

# DO NOT TRACK
SCARF_NO_ANALYTICS=true
DO_NOT_TRACK=true
ANONYMIZED_TELEMETRY=false
OTEL_SDK_DISABLED=true
DISABLE_CREWAI_WEBSOCKET_EVENTS=true

# This will prevent the SSL errors due to MiTM from being in the office
# if the GC CA is added to the bundle.
REQUESTS_CA_BUNDLE=/etc/ssl/certs/ca-certificates.crt

# RAG/Embedding Configuration
RAG_EMBEDDING_ENGINE='sentence-transformers'
RAG_EMBEDDING_MODEL='sentence-transformers/all-MiniLM-L6-v2'
RAG_EMBEDDING_MODEL_AUTO_UPDATE=true
RAG_EMBEDDING_MODEL_TRUST_REMOTE_CODE=false

# Sentence Transformers cache directory
SENTENCE_TRANSFORMERS_HOME='/home/sammueller/canchat-v2-3/backend/data/cache/embedding_models'

# Vector Database Configuration - Use Qdrant instead of ChromaDB
VECTOR_DB='qdrant'
QDRANT_URL='http://localhost:6333'

# Vector Database Cleanup Configuration
VECTOR_DB_CLEANUP_INTERVAL_HOURS=24
WEB_SEARCH_CACHE_MAX_AGE_DAYS=7
WEB_SEARCH_CLEANUP_MAX_AGE_DAYS=30
CHAT_FILE_CLEANUP_ENABLED=true
COMPREHENSIVE_CLEANUP_ENABLED=true
